// [START form]
extends ../base.jade

block content
  h3 #{action} person
  form(method="POST")
    .form-group
      label(for="lName") LastName
      input.form-control(type="text", name="lName, id="lName", value=person.lName)
    .form-group
      label(for="fName") FirstName
      input.form-control(type="text", name="fName, id="fName", value=person.fName)
    .form-group
      label(for="email") eMail
      input.form-control(type="text", name="email", id="email", value=person.email)
    .form-group
      label(for="phone") Phone
      input.form-control(type="text", name="phone", id="phone", value=person.phone)
    .form-group
      label(for="streetAddress") Home Address
      input.form-control(type="text", name="streetAddress", id="streetAddress", value=person.streetAddress)
    .form-group
      label(for="city") City
      input.form-control(type="text", name="city", id="city", value=person.city)
    .form-group
      label(for="zipcode") Zip
      input.form-control(type="text", name="zipcode", id="zipcode", value=person.zipcode)
    .form-group
      label(for="description") Description
      input.form-control(type="text", name="description", id="description", value=person.description)
    .form-group
      label(for="image") Image
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden
      label(for="imageUrl") Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=person.imageUrl)
    .form-group.hidden
      label(for="joinDate") Since
      input.form-control(type="text", name="joinDate", id="joinDate", value=person.joinDate)
    .form-group
      button.btn.btn-success(type="submit") Save

// [END form]
